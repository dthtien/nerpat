<div class="answer">
 <% if !current_user.cannot_destroy?(answer)  %>   
    <a class='dropdown-button right three-dots-vertical' href='#' data-activates="<%= dom_id(answer, :as) %>" >
    </a>
    <ul id='<%= dom_id(answer, :as) %>' class='dropdown-content'>
      <% if current_user.is_author?(answer)%>
        <li>
          <%= link_to "Edit", [:edit, answer], class: "black-text"%>
        </li>
      <% end %>
      <li>
        <%= link_to "Delete", answer, method: 'delete', class: "red-text" %>
      </li>
    </ul>   
  <% end %>
  <p>
    <%= link_to answer.user.full_name, answer.user.profile %>
  </p>
  <p>
    <%= answer.content %>
  </p>
  <div class="divider"></div>
</div>