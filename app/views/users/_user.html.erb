<div class="user col s12 m6 l4">
  <div class="card-panel blue-grey">
    <%= link_to "", username_path(username: user.profile.username) %>
  </div>
  <div class="card">
    <div class="card-content center">
      <%= image_tag user.avatar, size: '80x80', class: "circle" %>
      <h5><%= user.ordered_name %></h5>
      <p><%= user.profile.major %> - <%= user.profile.school %></p>
    </div>

    <div class="card-action right-align">
      <%= link_to text, link, method: mthd,
        class: "btn blue-grey" %>
    </div>
  </div>
</div> 